<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ln_tv_static_top"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_static_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Entrada"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

    <TextView
        android:id="@+id/tv_static_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Saida"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        app:layout_constraintStart_toEndOf="@id/tv_static_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_static_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Total"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        app:layout_constraintStart_toEndOf="@id/tv_static_2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_entrada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="8:00hrs"
        app:layout_constraintEnd_toEndOf="@+id/tv_static_1"
        app:layout_constraintStart_toStartOf="@+id/tv_static_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_static_1" />

    <TextView
        android:id="@+id/tv_saida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="12:00hrs"
        app:layout_constraintEnd_toEndOf="@+id/tv_static_2"
        app:layout_constraintStart_toStartOf="@+id/tv_static_2"
        app:layout_constraintTop_toBottomOf="@+id/tv_static_2" />

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="4:00hrs"
        app:layout_constraintEnd_toEndOf="@+id/tv_static_3"
        app:layout_constraintStart_toStartOf="@+id/tv_static_3"
        app:layout_constraintTop_toBottomOf="@+id/tv_static_3" />
</androidx.constraintlayout.widget.ConstraintLayout>